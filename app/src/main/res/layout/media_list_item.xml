<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/fab_margin"
    android:animateLayoutChanges="true"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/fab_margin">
        <RelativeLayout
            android:id="@+id/storyline_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/media_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/stoyline_list_item_height"
                android:src="@drawable/moeb_logo"
                android:paddingBottom="@dimen/fab_margin" />

            <ImageView
                android:id="@+id/media_type_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_movie_black_48dp"
                android:layout_below="@+id/media_thumbnail"
                android:layout_alignParentStart="true"
                android:paddingEnd="@dimen/fab_margin" />

            <TextView
                android:id="@+id/media_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/storyline_list_item_title"
                android:singleLine="false"
                tools:text="Nipper"
                android:layout_below="@+id/media_thumbnail"
                android:layout_toEndOf="@+id/media_type_image"/>

            <TextView
                android:id="@+id/media_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="10"
                tools:text="Lorem ipsum dolor sit amet, cons."
                android:layout_below="@+id/media_title"
                android:layout_toEndOf="@+id/media_type_image" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>